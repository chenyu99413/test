	/**
	 * 判断员工工号唯一
	 */
	function actionCodecheck(){
	    $staff=Staff::find('staff_code=?',request('staff_code'))->getOne();
	    if(!$staff->isNewRecord() && $staff->staff_id!=request('staff_id')){
	        echo 'error';
	    }else{
	        echo 'success';
	    }
	    exit();
	}
}