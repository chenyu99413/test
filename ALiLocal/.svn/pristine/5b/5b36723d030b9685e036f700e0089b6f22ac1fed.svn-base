<script type="text/javascript">
function del(obj){
	if (confirm('是否删除?')) {
    	var total_no=$(obj).attr('data');
    	$.ajax({
    		url:'<?php echo url('warehouse/deltotalin')?>',
    		data:{total_no:total_no},
    		type:'post',
    		async:false,
    		success:function(data){
    			if(data=='delsuccess'){
    				window.location.reload();
    			}else if(data=='delfalse'){
        			alert('该抵达总单下存在已绑定的订单');
    				window.location.reload();
    			}
    		}
    	});
	}
}
</script>
